<%= simple_form_for([@student,@examination,@score]) do |f| %>
    <% #输出f对象的内容 f.object.inspect %>
    <%= f.error_notification %>

    <div class="field">

      <%= f.input :student_id, as: :hidden %>
      <%= f.input :examination_id, as: :hidden %>
      <%= f.input :id, as: :hidden %>
    </div>

    <div class="field">
      <label><%=@examination.name %></label>
    </div>
    <% if  @training_class.exam_type == 'SAT' %>
        <div class="ui red circular label">SAT 各科总分和对错情况</div>


        <!--reading start-->
        <div class="ui two fields">
          <div class="ui five fields">
            <div class="field">
              Reading得分
              <%= f.number_field :course_e_score ,{min:0,max:400,class:'input sat course score'}%>

            </div>
            <div class="field">
              raw score
              <%= f.number_field :stat_17 ,{min:0,max:52}%>
            </div>
            <div class="field">
              <i class="green checkmark icon"></i>
              <!--正确数量-->
              <%= f.number_field :stat_18 ,{min:0,max:52,class:'input sat score'}%>
            </div>
            <div class="field">
              <i class="red close icon"></i>
              <!--错误数量-->
              <%= f.number_field :stat_19,{min:0,max:52,class:'input sat score'}%>
            </div>
            <div class="field">
              <i class="teal minus icon"></i>
              <!--空题数量-->
              <%= f.number_field :stat_20 ,{min:0,max:52,class:'input sat score'}%>
            </div>
          </div>
        </div>
        <!--reading end-->


        <!--Writing start-->
        <div class="ui two fields">
          <div class="ui five fields">
            <div class="field">
              Writing得分
              <%= f.number_field :course_c_score ,{min:0,max:400,class:'input sat course score'}%>

            </div>
            <div class="field">
              raw score
              <%= f.number_field :stat_15 ,{min:0,max:44}%>
            </div>
            <div class="field">
              <i class="green checkmark icon"></i>
              <!--正确数量-->
              <%= f.number_field :stat_12 ,{min:0,max:44,class:'input sat score'}%>
            </div>
            <div class="field">
              <i class="red close icon"></i>
              <!--错误数量-->
              <%= f.number_field :stat_13,{min:0,max:44,class:'input sat score'}%>
            </div>
            <div class="field">
              <i class="teal minus icon"></i>
              <!--空题数量-->
              <%= f.number_field :stat_14 ,{min:0,max:44,class:'input sat score'}%>
            </div>
          </div>
        </div>
        <!--Writing end-->

        <!--Mathematics start-->
        <div class="ui two fields">
          <div class="ui five fields">
            <div class="field">

              Mathematics得分
              <%= f.number_field :course_b_score,{min:0,max:800,class:'input sat course score'} %>
            </div>

            <div class="field">
              raw score
              <%= f.number_field :stat_11,{min:0,max:54} %>
            </div>
            <div class="field">
              <i class="green checkmark icon"></i>
              <!--正确数量-->
              <%= f.number_field :stat_08 ,{min:0,max:54,class:'input sat score'}%>
            </div>
            <div class="field">
              <i class="red close icon"></i>
              <!--错误数量-->
              <%= f.number_field :stat_09,{min:0,max:54,class:'input sat score'} %>
            </div>
            <div class="field">
              <i class="teal minus icon"></i>
              <!--空题数量-->
              <%= f.number_field :stat_10 ,{min:0,max:54,class:'input sat score'}%>
            </div>
          </div>
        </div>
        <!--Mathematics end-->






        <!--Eassy start-->
        <div class="ui two fields">
          <div class="ui five fields">
            <div class="field">
              Eassy总分
              <%= f.number_field :course_a_score,{min:0,max:24,class:'input sat course score'}%>
            </div>
            <!--<div class="field">-->
            <!--raw score-->
            <!--<%= f.number_field :stat_07,{min:0,max:67} %>-->
            <!--</div>-->
          </div>
        </div>
        <div class="ui two fields">
          <div class="ui five fields">
            <div class ="field"></div>
            <div class ="field"><label>R得分</label></div>

            <div class="field">
              <i class="green checkmark icon"></i>
              <!--正确数量-->
              <%= f.number_field :course_a1_score ,{min:0,max:8,class:'input sat score'}%>
            </div>

          </div>
        </div>
        <div class="ui two fields">
          <div class="ui five fields">
            <div class ="field"></div>
            <div class ="field"><label>A得分</label></div>
            <div class="field">
              <i class="green checkmark icon"></i>
              <!--正确数量-->
              <%= f.number_field :course_a2_score ,{min:0,max:8,class:'input sat score'}%>
            </div>

          </div>
        </div>
        <div class="ui two fields">
          <div class="ui five fields">
            <div class ="field"></div>
            <div class ="field"><label>W得分</label></div>

            <div class="field">
              <i class="green checkmark icon"></i>
              <!--正确数量-->
              <%= f.number_field :course_a3_score ,{min:0,max:8,class:'input sat score'}%>
            </div>

          </div>
        </div>

        <!--Eassy end-->


        <!--<div class="ui five fields">-->
          <!--<div class ="field"></div>-->

          <!--<div class="field">-->
            <!--<%= f.input :stat_16,label: "作文" %>-->
          <!--</div>-->
        <!--</div>-->

    <% elsif @training_class.exam_type == 'TOEFL' %>

        <div class="ui two fields">
          <div class="ui five fields">
            <div class="field">
              听力得分
              <%= f.number_field :course_a_score,{min:0,max:30,class:'input toefl course score'}%>
            </div>

            <div class="field">
              <%= f.input :stat_01 ,label: "正确"%>
            </div>

            <div class="field">
              <%= f.input :stat_02 ,label: "错误"%>
            </div>


          </div>
        </div>

        <div class="ui two fields">
          <div class="ui five fields">
            <div class="field">
              口语得分
              <%= f.number_field :course_b_score,{min:0,max:30,class:'input toefl course score'}%>
            </div>
            <div class="field">
              <%= f.input :stat_03 ,label: "1,2题"%>
            </div>
            <div class="field">
              <%= f.input :stat_04 ,label: "3,4题"%>
            </div>
            <div class="field">
              <%= f.input :stat_05 ,label: "5,6题"%>
            </div>
          </div>
        </div>

        <div class="ui two fields">
          <div class="ui five fields">
            <div class="field">
              阅读得分
              <%= f.number_field :course_c_score,{min:0,max:30,class:'input toefl course score'}%>
            </div>
            <div class="field">
              <%= f.input :stat_06 ,label: "正确"%>
            </div>
            <div class="field">
              <%= f.input :stat_07 ,label: "错误"%>
            </div>
          </div>
        </div>

        <div class="ui two fields">
          <div class="ui five fields">
            <div class="field">
              写作得分
              <%= f.number_field :course_d_score,{min:0,max:30,class:'input toefl course score'}%>
            </div>
            <div class="field">
              <%= f.input :stat_08 ,label: "综合写作"%>
            </div>
            <div class="field">
              <%= f.input :stat_09 ,label: "独立写作"%>
            </div>
          </div>
        </div>
    <% end %>
    <div class="ui five fields">
      <div class="field">
        <%= f.input :final_score,label:'总分' %>
      </div>
    </div>



    <!--嵌套表单用于 录入 每道试题对错得分 情况-->

    <% if nil %> #本版本不输出下面的内容
        <% questions_groupby_section = @score.score_details.group_by{|details| details.question.section.name} %>

        <% questions_groupby_section.each do |key,questions_arr| %>
            <h1><%= key.to_s + ":" + questions_arr.length.to_s %></h1>

            <%= f.simple_fields_for :score_details do |builder| %>
                <%= render 'score_details_form_fields', f: builder,section_name:key.to_s %>
            <% end %>
        <% end %>





        <h1>每题详细情况</h1>

        <%= @score.score_details.length %>

    <% end %>

    <div class="form-actions">
      <%= f.button :submit,'保存' %>
    </div>
<% end %>
